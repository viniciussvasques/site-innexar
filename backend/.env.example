# Django Backend
SECRET_KEY=your-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DB_NAME=structurone
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# API
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# File Upload
FILE_UPLOAD_MAX_MEMORY_SIZE=10485760
DATA_UPLOAD_MAX_MEMORY_SIZE=10485760

# i18n
LANGUAGE_CODE=pt-br
TIME_ZONE=America/Sao_Paulo

# Multi-tenant
TENANT_DOMAIN=structurone.com
TENANT_SUBDOMAIN_REQUIRED=False

# Email (para recuperação de senha)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend  # Produção
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-password
DEFAULT_FROM_EMAIL=noreply@structurone.com

# Billing - Stripe (NÃO COMITAR CHAVES REAIS NO GIT)
# Preencha estes valores apenas no .env local, não neste arquivo de exemplo
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Billing - Asaas (opcional / Brasil)
ASAAS_API_KEY=
ASAAS_ENVIRONMENT=sandbox
ASAAS_WEBHOOK_TOKEN=

